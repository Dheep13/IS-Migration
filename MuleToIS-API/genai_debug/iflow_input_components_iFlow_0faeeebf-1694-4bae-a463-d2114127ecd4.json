{
  "api_name": "Product API",
  "base_url": "http://localhost:8081/api/v1",
  "endpoints": [
    {
      "method": "GET",
      "path": "/products",
      "purpose": "Retrieves product details based on the provided product identifier",
      "components": [
        {
          "type": "enricher",
          "name": "Set_IsExistProduct_Variable",
          "id": "enricher_set_isexistproduct",
          "config": {
            "content": "${property.isExistProduct}"
          }
        },
        {
          "type": "odata",
          "name": "Get_Product_Details",
          "id": "odata_get_product",
          "config": {
            "address": "https://refapp-espm-ui-cf.cfapps.eu10.hana.ondemand.com:443/espm-cloud-web/espm.svc",
            "resource_path": "Products",
            "operation": "Query(GET)",
            "query_options": "$filter=ProductId eq '${property.productIdentifier}'&$select=ProductId,Category,CategoryName,CurrencyCode,DimensionDepth,DimensionHeight,DimensionUnit,DimensionWidth,LongDescription,Name,PictureUrl,Price,QuantityUnit,ShortDescription,SupplierId,Weight,WeightUnit"
          }
        },
        {
          "type": "groovy_script",
          "name": "Prepare_Error_Response",
          "id": "script_prepare_error",
          "config": {
            "script": "PrepareErrorResponse.groovy"
          }
        },
        {
          "type": "enricher",
          "name": "Validate_Product_ID",
          "id": "enricher_validate_product_id",
          "config": {
            "content": "${property.productIdentifier}"
          }
        },
        {
          "type": "groovy_script",
          "name": "Check_Product_Exists",
          "id": "script_check_product_exists",
          "config": {
            "script": "ValidateProductID.groovy"
          }
        },
        {
          "type": "enricher",
          "name": "Format_Success_Response",
          "id": "enricher_format_success",
          "config": {
            "content": "${body}"
          }
        }
      ],
      "sequence": [
        "enricher_validate_product_id",
        "script_check_product_exists",
        "enricher_set_isexistproduct",
        "odata_get_product",
        "enricher_format_success"
      ],
      "transformations": [
        {
          "name": "ValidateProductID.groovy",
          "type": "groovy",
          "script": "import com.sap.gateway.ip.core.customdev.util.Message;\n\ndef Message processData(Message message) {\n    def query = message.getHeaders().get(\"CamelHttpQuery\");\n    def productIdentifier = \"\";\n    \n    if (query != null && query.contains(\"productIdentifier=\")) {\n        productIdentifier = query.split(\"productIdentifier=\")[1];\n        if (productIdentifier.contains(\"&\")) {\n            productIdentifier = productIdentifier.split(\"&\")[0];\n        }\n    }\n    \n    message.setProperty(\"productIdentifier\", productIdentifier);\n    \n    def validProducts = message.getProperty(\"odata.productIdentifiers\").split(\",\");\n    \n    def isValid = false;\n    for (product in validProducts) {\n        if (product.trim() == productIdentifier) {\n            isValid = true;\n            break;\n        }\n    }\n    \n    message.setProperty(\"isExistProduct\", isValid);\n    return message;\n}"
        },
        {
          "name": "PrepareErrorResponse.groovy",
          "type": "groovy",
          "script": "import com.sap.gateway.ip.core.customdev.util.Message;\nimport groovy.json.JsonBuilder;\n\ndef Message processData(Message message) {\n    def productIdentifier = message.getProperty(\"productIdentifier\");\n    \n    def errorResponse = [\n        status: \"error\",\n        message: \"The product identifier \" + productIdentifier + \" was not found.\",\n        errorCode: \"PRODUCT_NOT_FOUND\"\n    ];\n    \n    def jsonBuilder = new JsonBuilder(errorResponse);\n    message.setBody(jsonBuilder.toString());\n    message.setHeader(\"Content-Type\", \"application/json\");\n    \n    return message;\n}"
        }
      ],
      "sequence_flows": [
        {
          "id": "SequenceFlow_Start",
          "source": "enricher_set_isexistproduct",
          "target": "odata_get_product",
          "is_immediate": true,
          "xml_content": "<bpmn2:sequenceFlow id=\"SequenceFlow_Start\" sourceRef=\"enricher_set_isexistproduct\" targetRef=\"odata_get_product\" isImmediate=\"true\"/>"
        },
        {
          "id": "SequenceFlow_1",
          "source": "odata_get_product",
          "target": "script_prepare_error",
          "is_immediate": true,
          "xml_content": "<bpmn2:sequenceFlow id=\"SequenceFlow_1\" sourceRef=\"odata_get_product\" targetRef=\"script_prepare_error\" isImmediate=\"true\"/>"
        },
        {
          "id": "SequenceFlow_2",
          "source": "script_prepare_error",
          "target": "enricher_validate_product_id",
          "is_immediate": true,
          "xml_content": "<bpmn2:sequenceFlow id=\"SequenceFlow_2\" sourceRef=\"script_prepare_error\" targetRef=\"enricher_validate_product_id\" isImmediate=\"true\"/>"
        },
        {
          "id": "SequenceFlow_3",
          "source": "enricher_validate_product_id",
          "target": "script_check_product_exists",
          "is_immediate": true,
          "xml_content": "<bpmn2:sequenceFlow id=\"SequenceFlow_3\" sourceRef=\"enricher_validate_product_id\" targetRef=\"script_check_product_exists\" isImmediate=\"true\"/>"
        },
        {
          "id": "SequenceFlow_End",
          "source": "script_check_product_exists",
          "target": "enricher_format_success",
          "is_immediate": true,
          "xml_content": "<bpmn2:sequenceFlow id=\"SequenceFlow_End\" sourceRef=\"script_check_product_exists\" targetRef=\"enricher_format_success\" isImmediate=\"true\"/>"
        }
      ]
    }
  ]
}