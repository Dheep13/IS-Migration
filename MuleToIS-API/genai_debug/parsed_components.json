{
  "api_name": "SAP OData Product Information API",
  "base_url": "/products",
  "endpoints": [
    {
      "method": "GET",
      "path": "/products",
      "purpose": "Retrieve product details from SAP HANA database via OData service",
      "components": [
        {
          "type": "enricher",
          "name": "Validate_Product_ID",
          "id": "enricher_validate_product",
          "config": {
            "content": "${property.get(\"odata.productIdentifiers\").split(\",\").find { it == message.getProperty(\"productIdentifier\") } != null}"
          }
        },
        {
          "type": "enricher",
          "name": "Set_IsExistProduct_Property",
          "id": "enricher_set_property",
          "config": {
            "content": "${property.isExistProduct}"
          }
        },
        {
          "type": "groovy_script",
          "name": "Product_Validation_Script",
          "id": "script_validate_product",
          "config": {
            "script": "ValidateProductIdentifier.groovy"
          }
        },
        {
          "type": "odata",
          "name": "Get_Product_Details",
          "id": "odata_get_product",
          "config": {
            "address": "${property.odata.service.url}",
            "resource_path": "Products",
            "operation": "Query(GET)",
            "query_options": "$filter=ProductId eq '${property.productIdentifier}'&$select=ProductId,Category,CategoryName,CurrencyCode,DimensionDepth,DimensionHeight,DimensionUnit,DimensionWidth,LongDescription,Name,PictureUrl,Price,QuantityUnit,ShortDescription,SupplierId,Weight,WeightUnit"
          }
        },
        {
          "type": "enricher",
          "name": "Set_Error_Response",
          "id": "enricher_error_response",
          "config": {
            "content": "{ \"status\": \"error\", \"message\": \"The product identifier ${property.productIdentifier} was not found.\", \"errorCode\": \"PRODUCT_NOT_FOUND\" }"
          }
        }
      ],
      "sequence": [
        "enricher_validate_product",
        "enricher_set_property",
        "script_validate_product",
        "odata_get_product",
        "enricher_error_response"
      ],
      "transformations": [
        {
          "name": "ValidateProductIdentifier.groovy",
          "type": "groovy",
          "script": "def productIdentifiers = property.get(\"odata.productIdentifiers\").split(\",\")\ndef requestedId = message.getProperty(\"productIdentifier\")\ndef isValid = productIdentifiers.find { it == requestedId } != null\nmessage.setProperty(\"isExistProduct\", isValid)\nreturn message"
        }
      ]
    }
  ]
}