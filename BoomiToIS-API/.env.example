# Claude API key (required)
CLAUDE_API_KEY=your_claude_api_key_here

# Server port (optional, default: 5000)
PORT=5000

# Debug mode (optional, default: True)
DEBUG=True

# SAP BTP Integration Suite configuration (required for deployment)
SAP_BTP_TENANT_URL=https://your-tenant.hana.ondemand.com
SAP_BTP_CLIENT_ID=your_client_id
SAP_BTP_CLIENT_SECRET=your_client_secret
SAP_BTP_OAUTH_URL=https://your-tenant.authentication.sap.hana.ondemand.com/oauth/token
SAP_BTP_DEFAULT_PACKAGE=your_default_package_id
